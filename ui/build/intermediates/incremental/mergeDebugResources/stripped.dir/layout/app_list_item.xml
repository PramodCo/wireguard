<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                                                                     

                 
                             
                                                                                                                                           

                 
                      
                            

                 
                       
                                                                 
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        android:gravity="center_vertical"
        android:tag="layout/app_list_item_0"                           
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:tag="binding_1"   
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/app_name"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
                                 
            tools:text="@tools:sample/full_names"  android:tag="binding_2"/>

        <CheckBox
            android:id="@+id/selected_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_3"            
            tools:checked="true" />

    </LinearLayout>
         